generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

model User {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  email         String?        @unique
  password      String?
  googleId      String         @unique
  refreshToken  String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  profile       Profile?
  bookings      Booking[]
  bookingQueues bookingQueue[]
}

model Profile {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @unique @db.ObjectId
  name        String?
  phoneNumber String?
  gender      String?
  birthDate   DateTime?
  state       String
  user        User      @relation(fields: [userId], references: [id])
}

model Concert {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  imageUrl       String
  date           DateTime
  venue          String
  gatesOpenTime  DateTime?
  languages       String?
  organizedBy       String?
  totalSeats     Int
  about          String?
  availableSeats Int
  categories     TicketCategory[]
  bookings       Booking[]
}

model TicketCategory {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  price          Float
  concertId      String    @db.ObjectId
  concert        Concert   @relation(fields: [concertId], references: [id])
  totalSeats     Int
  availableSeats Int
  bookings       Booking[]
}

model Booking {
  id         String          @id @default(auto()) @map("_id") @db.ObjectId
  userId     String          @db.ObjectId
  user       User            @relation(fields: [userId], references: [id])
  concertId  String          @db.ObjectId
  seats      Int
  status     String
  bookedAt   DateTime
  expiresAt  DateTime
  categoryId String          @db.ObjectId
  concert    Concert         @relation(fields: [concertId], references: [id])
  category   TicketCategory? @relation(fields: [categoryId], references: [id])
}

model bookingQueue {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String    @db.ObjectId
  concertId String    @db.ObjectId
  status    String
  position  Int
  enteredAt DateTime  @default(now())
  timeSlot  DateTime?
  user      User      @relation(fields: [userId], references: [id])
}
